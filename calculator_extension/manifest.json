{
  "manifest_version": 3,
  "name": "Calc Assistant",
  "version": "1.1.1",
  "description": "A multivariable calculus assistant with symbolic computations for Chrome and Firefox.",

  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },

  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/48.png",
    "default_title": "Calc3 Assistant"
  },

"background": {
  "scripts": ["background.js"]
},

  "permissions": [
    "storage"
  ],

  "host_permissions": [
    "https://course-calculator.onrender.com/*",
    "http://localhost:5000/*"
  ],

  "web_accessible_resources": [
    {
      "resources": [
        "styles.css",
        "icons/*",
        "mathlive.min.js",
        "mathlive.min.css",
        "compute-engine.min.js"
      ],
      "matches": ["<all_urls>"]
    }
  ],

  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "omarramy@aucegypt.com",
      "strict_min_version": "109.0"
    }
  }
}